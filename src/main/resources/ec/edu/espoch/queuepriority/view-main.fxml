<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="Canvas" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.queuepriority.controller.QueuePController">

    <!-- TOP -->
    <top>
        <VBox alignment="CENTER" spacing="15"
              style="-fx-padding: 20; -fx-background-color: #F5F7FA;"
              BorderPane.alignment="CENTER">

            <!-- TÃTULO -->
            <Label text="Queue Visualizer"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <!-- CONTROLES -->
            <HBox alignment="CENTER" spacing="10">

                <!-- DATO -->
                <TextField fx:id="txtValue"
                           prefWidth="140"
                           promptText="Dato" />

                <!-- PRIORIDAD -->
                <TextField fx:id="txtPriority"
                           prefWidth="140"
                           promptText="Prioridad (1 = alta)" />

                <Button fx:id="btmEnqueue"
                        text="ENQUEUE"
                        onAction="#enqueue"
                        style="-fx-background-color: #2D64E0; -fx-text-fill: white;" />

                <Button fx:id="btmDequeue"
                        text="DEQUEUE"
                        onAction="#dequeue"
                        style="-fx-background-color: #D9534F; -fx-text-fill: white;" />

                <Button fx:id="btmPeek"
                        text="PEEK"
                        onAction="#peek" />

                <Button fx:id="btmEmpty"
                        text="IS EMPTY"
                        onAction="#toList" />

                <Label text="Estado:" style="-fx-font-weight: bold;" />
                <Label fx:id="lblEstado" text="---" />

            </HBox>

            <!-- CANVAS -->
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
                <content>
                    <StackPane fx:id="canvasHolder"
                               prefHeight="197.0"
                               prefWidth="558.0" />
                </content>
            </ScrollPane>

        </VBox>
    </top>

</BorderPane>

